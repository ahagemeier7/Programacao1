@model Modelo.Address

<div class="text-center">
    <h1>Cadastro de Endereço</h1>

    <div class="container">
        <form id="formAddress" method="post"
              asp-action="Create"
              asp-controller="Address">

            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Rua</th>
                        <th scope="col">Número</th>
                        <th scope="col">Cidade</th>
                        <th scope="col">Estado</th>
                        <th scope="col">CEP</th>
                        <th scope="col">País</th>
                        <th scope="col">Tipo</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input type="text"
                                   class="form-control"
                                   id="Id"
                                   name="Id"
                                   value="@Model.Id"
                                   readonly />
                        </td>
                        <td>
                            <input type="text"
                                   class="form-control"
                                   id="Street"
                                   name="Street"
                                   value="@Model.Street" />
                        </td>
                        <td>
                            <input type="number"
                                   class="form-control"
                                   id="Number"
                                   name="Number"
                                   value="@Model.Number" />
                        </td>
                        <td>
                            <input type="text"
                                   class="form-control"
                                   id="City"
                                   name="City"
                                   value="@Model.City" />
                        </td>
                        <td>
                            <input type="text"
                                   class="form-control"
                                   id="State"
                                   name="State"
                                   value="@Model.State" />
                        </td>
                        <td>
                            <input type="text"
                                   class="form-control"
                                   id="PostalCode"
                                   name="PostalCode"
                                   value="@Model.PostalCode" />
                        </td>
                        <td>
                            <input type="text"
                                   class="form-control"
                                   id="Country"
                                   name="Country"
                                   value="@Model.Country" />
                        </td>
                        <td>
                            <input type="text"
                                   class="form-control"
                                   id="AddressType"
                                   name="AddressType"
                                   value="@Model.AddressType" />
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="mt-3">
                <button id="btnAddress"
                        type="submit"
                        class="btn btn-primary">
                    Cadastrar
                </button>
            </div>
        </form>
    </div>
</div>