@model List<Modelo.Address>

<a asp-action="Create" asp-controller="Address" class="btn btn-light">
    Novo endereco
</a>

@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover" style="table-layout: fixed; width: 100%;">
        <colgroup>
            <col style="width: 5%;" />    <!-- Id -->
            <col style="width: 8%;" />    <!-- Number -->
            <col style="width: 18%;" />   <!-- Rua -->
            <col style="width: 13%;" />   <!-- Cidade -->
            <col style="width: 10%;" />   <!-- Estado -->
            <col style="width: 12%;" />   <!-- CEP -->
            <col style="width: 12%;" />   <!-- País -->
            <col style="width: 12%;" />   <!-- Tipo_endereco -->
            <col style="width: 10%;" />   <!-- Ações -->
        </colgroup>
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Número</th>
                <th scope="col">Rua</th>
                <th scope="col">Cidade</th>
                <th scope="col">Estado</th>
                <th scope="col">CEP</th>
                <th scope="col">País</th>
                <th scope="col">Tipo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Modelo.Address address in Model)
            {
                <tr>
                    <td>@address.Id</td>
                    <td class="text-truncate">@address.Number</td>
                    <td class="text-truncate">@address.Street</td>
                    <td class="text-truncate">@address.City</td>
                    <td class="text-truncate">@address.State</td>
                    <td class="text-truncate">@address.PostalCode</td>
                    <td class="text-truncate">@address.Country</td>
                    <td class="text-truncate">@address.AddressType</td>
                    <td>
                        <a asp-action="Update" asp-controller="Address" method="get"
                           asp-route-id="@address.Id"
                           title="Atualizar Endereço @address.Number"
                           class="btn btn-primary btn-sm">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                        </a>
                        <a asp-action="Delete" asp-controller="Address"
                           asp-route-id="@address.Id"
                           title="Excluir endereço @address.Number"
                           class="btn btn-danger btn-sm">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        Não existem endereços cadastrados
    </div>
}