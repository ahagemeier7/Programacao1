@model List<Modelo.Category>

<a asp-action="Create" asp-controller="Category" class="btn btn-light">
    Nova categoria
</a>

@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover" style="table-layout: fixed; width: 100%;">
        <colgroup>
            <col style="width: 10%;" />   <!-- Id -->
            <col style="width: 60%;" />   <!-- Nome -->
            <col style="width: 30%;" />   <!-- Ações -->
        </colgroup>
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Modelo.Category category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td class="text-truncate">@category.Name</td>
                    <td>
                        <a asp-action="Update" asp-controller="Categoriy"
                           asp-route-id="@category.Id"
                           title="Atualizar Categoria @category.Name"
                           class="btn btn-primary btn-sm">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                        </a>
                        <a asp-action="Delete" asp-controller="Category"
                           asp-route-id="@category.Id"
                           title="Excluir imovel @category.Name"
                           class="btn btn-danger btn-sm">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        Não existem Categorias cadastradas
    </div>
}