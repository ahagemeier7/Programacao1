@model Modelo.Category;

<div class="text-center">
    <h1>Atualizar categoria</h1>

    <div class="container">
        <form id="formCustomer" method="post"
              asp-action="Update"
              asp-controller="Category">

            <table class="table">
                <colgroup>
                    <col style="width: 10%;" />   <!-- Id -->
                    <col style="width: 60%;" />   <!-- Nome -->
                    <col style="width: 30%;" />   <!-- Ações -->
                </colgroup>
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nome</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input type="text"
                                   class="form-control"
                                   id="Id"
                                   name="Id"
                                   value="@Model.Id"
                                   readonly />
                        </td>
                        <td>
                            <input type="text"
                                   class="form-control"
                                   id="Name"
                                   name="Name"
                                   value="@Model.Name" />
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="mt-3">
                <button id="btnCategory"
                        type="submit"
                        class="btn btn-primary">
                    Atualizar
                </button>
            </div>
        </form>
    </div>
</div>