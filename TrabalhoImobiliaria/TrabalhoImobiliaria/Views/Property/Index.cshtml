@model List<Modelo.Property>


<a asp-action="Create" asp-controller="Property" class="btn btn-light" >
    Novo imovel
</a>

@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nro_Quartos</th>
                <th scope="col">Nro_Vagas</th>
                <th scope="col">Nro_Banheiros</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
                <th scope="col">Categoria</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Modelo.Property property in Model)
            {
                <tr>
                    <td>@property.Id</td>
                    <td>@property.NroQuartos</td>
                    <td>@property.NroVagas</td>
                    <td>@property.NroBanheiros</td>
                    <td>@property.Nome</td>
                    <td>@property.Descricao</td>
                    <td>@property.Categoria</td>
                    <td>
                        <a asp-action="Delete" asp-controller="Property"
                           asp-route-id="@property.Id"
                           title="Excluir imovel @property.Nome">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>    
            }
        </tbody>
    </table>
}
else
{
    <div>
        Não existem registros de Customer
    </div>
}