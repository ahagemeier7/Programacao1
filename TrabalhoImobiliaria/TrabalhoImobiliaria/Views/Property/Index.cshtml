@model List<Modelo.Property>

<a asp-action="Create" asp-controller="Property" class="btn btn-light" >
    Novo imovel
</a>

@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover" style="table-layout: fixed; width: 100%;">
        <colgroup>
            <col style="width: 5%;" />    <!-- Id -->
            <col style="width: 7%;" />    <!-- Nro_Quartos -->
            <col style="width: 7%;" />    <!-- Nro_Vagas -->
            <col style="width: 8%;" />    <!-- Nro_Banheiros -->
            <col style="width: 15%;" />   <!-- Nome -->
            <col style="width: 20%;" />   <!-- Descrição -->
            <col style="width: 12%;" />   <!-- Categoria -->
            <col style="width: 16%;" />   <!-- Endereco -->
            <col style="width: 10%;" />   <!-- Ações -->
        </colgroup>
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Quartos</th>
                <th scope="col">Vagas</th>
                <th scope="col">Banheiros</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
                <th scope="col">Categoria</th>
                <th scope="col">Endereço</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Modelo.Property property in Model)
            {
                <tr>
                    <td>@property.Id</td>
                    <td>@property.NroQuartos</td>
                    <td>@property.NroVagas</td>
                    <td>@property.NroBanheiros</td>
                    <td class="text-truncate">@property.Nome</td>
                    <td class="text-truncate">@property.Descricao</td>
                    <td class="text-truncate">@property.Categoria?.Name</td>
                    <td class="text-truncate">@property.Address?.Number</td>
                    <td>
                        <a asp-action="Update" asp-controller="Property" metohd="get"
                           asp-route-id="@property.Id"
                           title="Atualizar imovel @property.Nome"
                           class="btn btn-primary btn-sm">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                        </a>
                        <a asp-action="Delete" asp-controller="Property"
                           asp-route-id="@property.Id"
                           title="Excluir imovel @property.Nome"
                           class="btn btn-danger btn-sm">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>    
            }
        </tbody>
    </table>
}
else
{
    <div>
        Não existem imoveis cadastrados
    </div>
}

<a asp-action="ExportDelimitatedFile"
   asp-controller="Property"
   class="btn btn-light">
    Exportar Delimitado
</a>