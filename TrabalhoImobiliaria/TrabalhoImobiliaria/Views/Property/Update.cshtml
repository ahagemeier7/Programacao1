@model TrabalhoImobiliaria.ViewModels.PropertyViewModel;

<div class="text-center">
    <h1>Atualizar Imóvel</h1>

    <div class="container">
        <form id="formProperty" method="post"
              asp-action="Update"
              asp-controller="Property">

            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nro_Quartos</th>
                        <th scope="col">Nro_Vagas</th>
                        <th scope="col">Nro_Banheiros</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Descrição</th>
                        <th scope="col">Categoria</th>
                        <th scope="col">Endereço</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input type="text"
                                   class="form-control"
                                   id="Id"
                                   name="Property.Id"
                                   value="@Model.Property?.Id"
                                   readonly />
                        </td>
                        <td>
                            <input type="number"
                                   class="form-control"
                                   id="NroQuartos"
                                   name="Property.NroQuartos"
                                   value="@Model.Property?.NroQuartos" />
                        </td>
                        <td>
                            <input type="number"
                                   class="form-control"
                                   id="NroVagas"
                                   name="Property.NroVagas"
                                   value="@Model.Property?.NroVagas" />
                        </td>
                        <td>
                            <input type="number"
                                   class="form-control"
                                   id="NroBanheiros"
                                   name="Property.NroBanheiros"
                                   value="@Model.Property?.NroBanheiros" />
                        </td>
                        <td>
                            <input type="text"
                                   class="form-control"
                                   id="Nome"
                                   name="Property.Nome"
                                   value="@Model.Property?.Nome" />
                        </td>
                        <td>
                            <input type="text"
                                   class="form-control"
                                   id="Descricao"
                                   name="Property.Descricao"
                                   value="@Model.Property?.Descricao" />
                        </td>
                        <td>
                            <select class="form-select" id="CategoriaId" name="Property.CategoriaId">
                                @foreach (var c in Model.Categories)
                                {
                                    <option value="@c.Id">@c.Name</option>
                                }
                            </select>
                        </td>
                        <td>
                            <select class="form-select" id="AddressId" name="Property.AddressId">
                                @foreach (var a in Model.Addresses!)
                                {
                                    <option value="@a.Id">@a.Number</option>
                                }
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="mt-3">
                <button id="btnProperty"
                        type="submit"
                        class="btn btn-primary">
                    Atualizar
                </button>
            </div>
        </form>
    </div>
</div>